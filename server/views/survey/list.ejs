<%-include ../partials/header.ejs%>
<%-include ../partials/main_nav.ejs%>
  

  
 
   <p>Welcome to <%= title %></p>
<main class="container">
<div class="row">
    <div class="col-md-offset-3 col md-8">
        <h1><%= title %></h1>
        <a href="/survey/add" class="btn btn-primary" role="button">
            <i class ="fas fa-plus-circle"></i>Add a Survey</a>
        <br>
        <table class = "table table-bordered table-striped table-hover">
            <tr>
                <th class="text-content col-2">Title</th>
                <th class="text-content col-2">Type</th>
                <th class="text-content col-2">Start Date</th>
                <th class="text-content col-2">End Date</th>
                <th class="text-content col-2">q1</th>
                <th class="text-content col-2">q2</th>
                <th class="text-content col-2">q3</th>
                <th class="text-content col-2">q4</th>
                <th class="text-content col-2">q5</th>
                <th class="text-content col-1"></th>
                <th class="text-content col-1"></th>
                </tr>
           <% for(let count = 0; count<survey.length; count++){ %>
            <tr>
                <td class = "text-center col-2"><%=survey[count].title%></td>
                <td class = "text-center col-2"><%=survey[count].type%></td>
                <td class = "text-center col-2"><%=survey[count].startdate%></td>
                <td class = "text-center col-2"><%=survey[count].enddate%></td>
                <td class = "text-center col-2"><%=survey[count].q1%></td>
                <td class = "text-center col-2"><%=survey[count].q2%></td>
                <td class = "text-center col-2"><%=survey[count].q3%></td>
                <td class = "text-center col-2"><%=survey[count].q4%></td>
                <td class = "text-center col-2"><%=survey[count].q5%></td>
                <td class ="text-center col-1"><a href="/survey/update/<%=survey[count]._id%>" class="btn btn-primary"><i class="fas fa-pencil-alt"></i>Update</a></td>
                <td class ="text-center col-1"><a href="/survey/delete/<%=survey[count]._id%>" class="btn btn-danger"><i class="fas fa-trash-alt"></i>Delete</a></td>    
            </tr>
                <%}%>
            </table>

        </div>
    </div>
    </main>

   <%-include ../partials/bottom_nav.ejs%>
<%-include ../partials/footer.ejs%>   

